{
  "name": "@openfiles-ai/repo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "ci": "pnpm build && pnpm test && pnpm lint",
    "prerelease": "pnpm ci",
    "release": "pnpm prerelease && pnpm release:version && pnpm release:publish && pnpm release:push",
    "release:version": "changeset version",
    "release:publish": "pnpm release:publish:ts && pnpm release:publish:py",
    "release:publish:ts": "changeset publish",
    "release:publish:py": "cd sdks/python && poetry publish --build",
    "release:push": "git push --follow-tags",
    "release:dry": "pnpm prerelease && pnpm release:dry:ts && pnpm release:dry:py",
    "release:dry:ts": "cd sdks/typescript && pnpm build && npm publish --dry-run",
    "release:dry:py": "cd sdks/python && poetry build && poetry publish --dry-run",
    "changeset": "changeset",
    "changeset:status": "changeset status --verbose"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18"
  }
}
