{
  "name": "@openfiles-ai/repo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "publish": "echo 'Use publish:typescript or publish:python for individual SDK publishing'",
    "publish:typescript": "turbo run publish --filter=@openfiles-ai/sdk",
    "publish:python": "turbo run publish --filter=@openfiles-ai/python-sdk",
    "version": "changeset version",
    "ci": "turbo run build test lint check-types",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "pnpm ci && pnpm changeset:version && pnpm changeset:publish",
    "publish:dry-run": "echo 'Use publish:typescript:dry-run or publish:python:dry-run'",
    "publish:typescript:dry-run": "turbo run publish:dry-run --filter=@openfiles-ai/sdk", 
    "publish:python:dry-run": "turbo run publish:dry-run --filter=@openfiles-ai/python-sdk"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18"
  }
}
